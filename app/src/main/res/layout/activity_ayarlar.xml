                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="bulutlu.json"
                    app:lottie_loop="true" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/bulutlu2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="bulutlu2.json"
                    app:lottie_loop="true" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/bulutlu3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="bulutmini.json"
                    app:lottie_loop="true" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/bulutlu4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="gokkusagi.json"
                    app:lottie_loop="true" />


            </GridLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/a888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bulutluanimasyonlinear"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/yagmurlulugun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Yağmurlu Gün Animasyonu"
            android:textSize="25dp"
            style="@style/ayarlarfontu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/a888888" />

        <LinearLayout
            android:id="@+id/yagmurluanimasyonlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yagmurlulugun">

            <GridLayout
                android:id="@+id/gridLayoutyagmur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="8dp"
                android:rowCount="2">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/yagmur1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="rainmini.json"
                    app:lottie_loop="true" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/yagmur2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="yagmur.json"
                    app:lottie_loop="true" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/yagmur4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="yagmurkadin2.json"
                    app:lottie_loop="true" />


            </GridLayout>

        </LinearLayout>


