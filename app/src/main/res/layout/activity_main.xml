<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:id="@+id/swipe">

    <androidx.core.widget.NestedScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/arkaplanGenel">

            <ImageView
                android:id="@+id/arcMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arc" />

            <ImageView
                android:id="@+id/gif"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/gun"
                app:layout_constraintEnd_toEndOf="@id/gun"
                app:layout_constraintTop_toTopOf="@id/gun" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/gun"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/maxmin"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/maxmin"
                style="@style/subfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/subSiyahText"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hissedilen" />

            <TextView
                android:id="@+id/districtName"
                style="@style/subfont"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text=""
                android:textColor="@color/textSiyah"
                android:textSize="40sp"
                app:layout_constraintBottom_toTopOf="@+id/derece"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/derece"
                style="@style/genelfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:textSize="80dp"
                android:textColor="@color/textSiyah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hissedilen"
                style="@style/subfont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@color/subSiyahText"
                android:textSize="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/derece" />

            <TextView
                android:id="@+id/saatlikdurum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nb"
                android:text="@string/yirmidÃ¶rt_saatin_raporu"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/textSiyah"
                app:layout_constraintBottom_toTopOf="@id/saatlikdurum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durum4" />

            <TextView
                android:id="@+id/saatlikdurum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nb"
                android:text="@string/grafik_olarak_goster"
                android:textColor="@color/textSiyah"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@id/saatlik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saatlikdurum2" />

            <Switch
                android:id="@+id/grafikSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@id/saatlikdurum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/saatlikdurum" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/saatlik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                app:layout_constraintBottom_toTopOf="@id/forecastText"
                app:layout_constraintTop_toBottomOf="@+id/saatlikdurum">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/saatlikChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/saatlikHumChartLine"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="32dp"
                        android:visibility="visible"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/saatlikChartLine" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/saatlikChartLine"
                        android:layout_width="0dp"
                        android:layout_height="200dp"

                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/saatlikChartBar"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="32dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/saatlikHumChartLine" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/saatlik2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/forecastText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/nb"
                android:text="@string/yedi_gunun_raporu"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/textSiyah"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/saatlik" />

            <TextView
                android:id="@+id/grafikForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nb"
                android:text="@string/grafik_olarak_goster"
                android:textSize="20dp"
                android:textColor="@color/textSiyah"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forecastText" />

            <Switch
                android:id="@+id/grafikSwitchForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textSiyah"
                app:layout_constraintBottom_toBottomOf="@id/grafikForecast"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forecastText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="70dp"
                android:textColor="@color/textSiyah"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grafikForecast"
                app:layout_constraintVertical_bias="0.0" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/forecastLineChart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="100dp"
                android:visibility="gone"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/grafikSwitchForecast" />

            <LinearLayout
                android:id="@+id/durum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gun">


                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"

                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/nemanimasyon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            android:scaleType="fitCenter"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="humidity.json"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nemtext"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="left"
                            android:padding="8dp"
                            android:text="@string/nem"
                            android:textSize="15dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/nemanimasyon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nem"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/nemanimasyon"
                            app:layout_constraintTop_toBottomOf="@id/nemtext" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Cloud Cover Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/bulutortusu12"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="bulutmini.json"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bulutluluk_text"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="4dp"
                            android:gravity="left"
                            android:padding="8dp"
                            android:text="@string/bulut_ortusu"
                            android:textColor="@color/textSiyah"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bulutortusu12"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bulutluluk"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bulutortusu12"
                            app:layout_constraintTop_toBottomOf="@id/bulutluluk_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Second Row: Wind Speed & Direction -->
            <LinearLayout
                android:id="@+id/durum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durum">

                <!-- Wind Speed Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/ruzgaranimasyon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="ruzgar.json"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ruzgar_hizi_text"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:textColor="@color/textSiyah"
                            android:text="@string/ruzgar_hizi"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ruzgaranimasyon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ruzgar_hizi"
                            style="@style/verifontu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/textSiyah"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20dp"
                            android:autoSizeMinTextSize="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:maxLines="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text=""
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ruzgaranimasyon"
                            app:layout_constraintTop_toBottomOf="@id/ruzgar_hizi_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Wind Direction Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="18dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/ruzgaranimasyon2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="ruzgar.json"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/ruzgar_yonu_text"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:text="@string/ruzgar_yonu"
                            android:textSize="14dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ruzgaranimasyon2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ruzgar_yonu"
                            style="@style/verifontu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20dp"
                            android:autoSizeMinTextSize="4dp"
                            android:textColor="@color/textSiyah"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:maxLines="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text=""
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ruzgaranimasyon2"
                            app:layout_constraintTop_toBottomOf="@id/ruzgar_yonu_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/durum3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durum2">

                <!-- Rain Amount Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/yagmuranimasyon1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="rainmini.json"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/yagmur_text"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/yagmur"
                            android:textSize="14dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/yagmuranimasyon1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/yagmur"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text=""
                            android:textSize="22dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/yagmuranimasyon1"
                            app:layout_constraintTop_toBottomOf="@id/yagmur_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thunderstorm Probability Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="18dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/bulutortusu"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="rainmini.json"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/saganak_text"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/saganak"
                            android:textSize="14dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bulutortusu"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/saganak"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text=""
                            android:textSize="22dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/bulutortusu"
                            app:layout_constraintTop_toBottomOf="@id/saganak_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/durum4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durum3">

                <!-- Rain Amount Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="18dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/karmini"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="kar.json"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/kartext"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/kar"
                            android:textSize="16dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/karmini"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/kar"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text=""
                            android:textSize="22dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/karmini"
                            app:layout_constraintTop_toBottomOf="@id/kartext" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:elevation="16dp"
                    app:cardBackgroundColor="@color/arkaplan"
                    app:cardCornerRadius="10dp"                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        >

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/basincanimasyon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="18dp"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="metre.json"
                            app:lottie_loop="true" />

                        <TextView
                            android:id="@+id/basinctext"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-14dp"
                            android:padding="8dp"
                            android:text="@string/basinc2"
                            android:textSize="12dp"
                            android:textColor="@color/textSiyah"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@id/basincanimasyon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/basinc"
                            style="@style/verifontu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="12dp"
                            android:layout_marginEnd="8dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20dp"
                            android:autoSizeMinTextSize="4dp"
                            android:maxLines="1"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintBottom_toBottomOf="@+id/basinctext"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/basinctext"
                            app:layout_constraintTop_toTopOf="@id/basinctext" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/uvanimasyon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="uvmini.json"
                            app:layout_constraintBottom_toTopOf="@id/uvanimasyon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/basincanimasyon"/>

                        <TextView
                            android:id="@+id/uvtext"
                            style="@style/verifontu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="UV"
                            android:textSize="12dp"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintStart_toStartOf="@id/basinctext"
                            app:layout_constraintTop_toTopOf="@id/uvanimasyon" />

                        <TextView
                            android:id="@+id/uv"
                            style="@style/verifontu"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text=""
                            android:textSize="12dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="20dp"
                            android:autoSizeMinTextSize="4dp"
                            android:layout_marginEnd="8dp"
                            android:maxLines="1"
                            android:textColor="@color/textSiyah"
                            app:layout_constraintBottom_toBottomOf="@+id/uvtext"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/basinc"
                            app:layout_constraintTop_toTopOf="@id/uvtext" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <ImageView
                android:id="@+id/ayarlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arcMain"
                app:srcCompat="@drawable/settings" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>