<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/includings2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_background"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/saatlik_animasyon2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="gunesmini2.json"
            app:lottie_loop="true" />

        <ImageView
            android:id="@+id/bulutimage22"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="@id/saatlik_animasyon2"
            app:layout_constraintTop_toTopOf="@id/saatlik_animasyon2"
            app:layout_constraintStart_toStartOf="@id/saatlik_animasyon2"
            app:layout_constraintEnd_toEndOf="@id/saatlik_animasyon2"
            app:srcCompat="@drawable/baseline_cloud_24" />

        <TextView
            android:id="@+id/design_saat2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="SAAT"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:maxLines="1"
            android:fontFamily="@font/annie"
            app:layout_constraintBottom_toTopOf="@id/sicaklik2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saatlik_animasyon2" />

        <TextView
            android:id="@+id/sicaklik2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="20dp"

            android:gravity="center"
            android:text="SICAKLIK"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/annie"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeMinTextSize="12dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/design_saat2" />

        <TextView
            android:id="@+id/sicaklik_apparent2"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Hissedilen: 20.0 C"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18dp"
            android:maxLines="1"
            android:layout_marginHorizontal="16dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeMinTextSize="8dp"
            android:fontFamily="@font/annie"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sicaklik2" />

        <TextView
            android:id="@+id/nem_hourly2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="nem"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:maxLines="1"
            android:layout_marginHorizontal="16dp"
            android:autoSizeMaxTextSize="16dp"
            android:autoSizeMinTextSize="12dp"
            android:fontFamily="@font/annie"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sicaklik_apparent2" />

        <TextView
            android:id="@+id/ruzgarhizi2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:text="nem"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeMinTextSize="8sp"
            android:fontFamily="@font/annie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nem_hourly2" />

        <TextView
            android:id="@+id/ruzgaryonu2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="16dp"
            android:autoSizeMaxTextSize="18dp"
            android:autoSizeMinTextSize="12dp"
            android:fontFamily="@font/annie"
            android:gravity="center"
            android:maxLines="1"
            android:text="nem"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ruzgarhizi2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>