<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="11dp"
    android:layout_marginBottom="10dp"
    android:elevation="70dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/includings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/saatlik_animasyon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="gunesmini2.json"
            app:lottie_loop="true" />

        <ImageView
            android:id="@+id/bulutimage2"
            android:layout_width="0dp"
            android:layout_height="0dp"
           app:layout_constraintBottom_toBottomOf="@id/saatlik_animasyon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="16dp"
            app:srcCompat="@drawable/baseline_cloud_24" />


        <TextView
            android:id="@+id/design_saat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="SAAT"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/annie"
            app:layout_constraintBottom_toTopOf="@id/sicaklik"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saatlik_animasyon" />

        <TextView
            android:id="@+id/sicaklik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:fontFamily="@font/annie"
            android:text="SICAKLIK"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/design_saat" />

        <TextView
            android:id="@+id/sicaklik_apparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:fontFamily="@font/annie"
            android:text="SICAKLIK"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sicaklik" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>